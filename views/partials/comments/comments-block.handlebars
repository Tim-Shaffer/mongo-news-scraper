<div class="row comments">

  <div class="col-sm-10">

  <h5> 
    <strong><span class="caption-size">Caption:  {{this.tagLine}}</span></strong> 
  </h5>

  </div>

  <div class="col-sm-2">
                    
      <button data-id="{{this._id}}" class="deleteComment btn-danger">Delete</button>

  </div>

</div>

<div class="row double-border">

  <div class="col-sm-10">

    <p>

      <i><span class="comment-size">{{this.comment}}</span></i>

      <br>

      <span class="by-size">Comment by {{this.user}} on {{this.userCreated}}</span>

    </p>

  </div>

</div>
  


    
