<div class="container comments" id="comments">

    {{#each Articles}}

        <div class="row commented-article">

            <h4> 
            
                <a href="https://www.inquirer.com{{this.link}}" target="_blank">{{this.headline}}</a>

            </h4>

        </div>

        <div class="row solid-border">

            <p>

                {{this.summary}}

            </p>

        </div>

        <div class="row solid-border">

            <h3>COMMENTS:</h3>

        </div>

        <div class="row" id="notes">
    
            {{#if this.Comments}}

                <div class="container">

                    {{#each this.Comments}}

                        {{> comments/comments-block}}
                        
                    {{/each}}

                </div>
            
            {{/if}}

        </div>

        <div class="row">

            <div class="container">
                    
                <input name="Caption" id="tagLine-input" type="text" 
                    class="col-xs-12 col-sm-12 col-md-12 col-lg-12 input-text" placeholder="Caption..." required/>
                    
                <input name="Caption" id="user-input" type="text" 
                    class="col-xs-12 col-sm-12 col-md-12 col-lg-12 input-text" placeholder="Your Name..." required/>
                    
                <textarea name="Comments" id="comment" cols="" rows=""
                    class="col-xs-12 col-sm-12 col-md-12 col-lg-12"
                    placeholder="Your comment..." required></textarea>

                <input type="submit" id="make-new" data-id="{{this._id}}" name="send" class="submitBtn btn-success" value="Add New Comment">

            </div>

        </div>

    {{/each}}

    <div class="row bottom-row">

    </div>

</div>

 